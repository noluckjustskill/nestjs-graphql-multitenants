{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "incremental": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "seed/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
